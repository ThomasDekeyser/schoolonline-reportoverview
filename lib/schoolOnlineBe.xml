	<!-- DO NOT EDIT -->
	<var-def name="url"><![CDATA[https://bsvisitatie.schoolonline.be/FWLogin/FWStart.php]]></var-def>
	<var-def name="urllogin"><![CDATA[https://bsvisitatie.schoolonline.be/FWLogin/FWLogIn.php]]></var-def>
	<var-def name="urlpunten"><![CDATA[https://bsvisitatie.schoolonline.be/PuntenboekLeerkracht/PuntenboekLeerkrachtList.php?]]></var-def>
	<var-def name="urlpuntenEdit"><![CDATA[https://bsvisitatie.schoolonline.be/PuntenboekLeerkracht/PuntenboekLeerkrachtEdit.php?]]></var-def>
	<var-def name="url2"><![CDATA[https://bsvisitatie.schoolonline.be/PuntenboekLeerkracht/PuntenboekLeerkrachtEdit.php?PuntenboekLeerkrachtViewStateVakLinkLeerkrachtKlasID=601&PuntenboekLeerkrachtViewStatePeriodeID=74]]></var-def>
